// See https://go.microsoft.com/fwlink/?linkid=830387 for spec
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "node: doppler server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "doppler",
      "runtimeArgs": [
        "run",
        "--",
        "nodemon"
      ],
      "restart": true,
      "env": {
        "PATH": "${env:PATH}:${workspaceFolder}/node_modules/.bin",
        "NODE_ENV": "development"
      },
      "skipFiles": [
        "<node_internals>/**"
      ],
    },
    {
      "name": "node: server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "nodemon",
      "restart": true,
      "env": {
        "PATH": "${env:PATH}:${workspaceFolder}/node_modules/.bin",
        "NODE_ENV": "development"
      },
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
